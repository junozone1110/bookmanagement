# ==========================================
# Database Settings
# ==========================================
DB_NAME=book_management
DB_USER=bookadmin
DB_PASSWORD=password
DB_HOST=db
DB_PORT=3306

# ==========================================
# Django Settings
# ==========================================
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# ==========================================
# Google API Settings
# ==========================================

# Google Sheets API
# サービスアカウントのJSONファイルのパス
GOOGLE_SHEETS_CREDENTIALS_PATH=/app/credentials/google_sheets_credentials.json

# スプレッドシートID
# スプレッドシートのURLから取得: https://docs.google.com/spreadsheets/d/{SPREADSHEET_ID}/edit
GOOGLE_SHEETS_SPREADSHEET_ID=your-spreadsheet-id

# Google Books API Key（オプション）
# APIキーなしでも動作しますが、レート制限が厳しくなります
GOOGLE_BOOKS_API_KEY=

# ==========================================
# Logging Settings
# ==========================================
LOG_LEVEL=INFO
LOG_FILE_PATH=/var/log/book-management/batch.log

# ==========================================
# 設定方法
# ==========================================
# 1. このファイルをコピーして .env ファイルを作成してください
#    cp .env.example .env
#
# 2. .env ファイルの値を実際の値に置き換えてください
#
# 3. Google Sheets API の設定
#    - Google Cloud Console でサービスアカウントを作成
#    - JSONキーをダウンロードして google_sheets_credentials.json として配置
#    - サービスアカウントのメールアドレスをスプレッドシートに共有（編集者権限）
#
# 4. セキュリティ注意事項
#    - .env ファイルは Git にコミットしないでください
#    - 本番環境では SECRET_KEY を必ず変更してください
#    - 本番環境では DEBUG=False に設定してください
